---
import Navigation from "@/components/Navigation.astro";
import Layout from "@/layouts/ProjectLayout.astro";
import "../../../components/styles/WorkDescription.css";
import image1 from "#/projects/socialmedia/02.png";
import image2 from "#/projects/socialmedia/03.png";
import image3 from "#/projects/socialmedia/01.png";
import image4 from "#/projects/socialmedia/4-min.png";
import image5 from "#/projects/socialmedia/05.png";
import image6 from "#/projects/socialmedia/04.png";
import image7 from "#/projects/socialmedia/6-min.png";
import image8 from "#/projects/socialmedia/7-min.png";
---

<Layout title="Social Media">
  <main class="detailed-description">
    <Navigation />
    <a href="https://hctor11.github.io/react-resources/" target="_blank">
      <h1>Social Media Designs</h1>
    </a>

    <p>Collection of social media designs and advertisements</p>

    <div class="bento">
      <div class="bento-item">
        <img
          loading="lazy"
          src={image1.src}
          alt="Social Media Designs"
        />
      </div>
      <div class="bento-item">
        <img
          loading="lazy"
          src={image2.src}
          alt="Social Media Designs"
        />
      </div>
    </div>
    <div class="bento-item">
      <img
        loading="lazy"
        src={image3.src}
        alt="Social Media Designs"
      />
    </div>
    <div class="bento-item">
      <img
        loading="lazy"
        src={image4.src}
        alt="Social Media Designs"
      />
    </div>
    <div class="bento">
      <div class="bento-item">
        <img
          loading="lazy"
          src={image5.src}
          alt="Social Media Designs"
        />
      </div>
      <div class="bento-item">
        <img
          loading="lazy"
          src={image6.src}
          alt="Social Media Designs"
        />
      </div>
    </div>
    <div class="bento-item">
      <img
        loading="lazy"
        src={image7.src}
        alt="Social Media Designs"
      />
    </div>
    <div class="bento-item">
      <img
        loading="lazy"
        src={image8.src}
        alt="Social Media Designs"
      />
    </div>
  </main>
</Layout>
