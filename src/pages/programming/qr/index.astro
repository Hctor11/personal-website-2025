---
import Navigation from "@/components/Navigation.astro";
import Layout from "@/layouts/ProjectLayout.astro";
import "../../../components/styles/WorkDescription.css";
import image from "#/projects/qr/screen.png";
---

<Layout title="QR Generator">
  <main class="detailed-description">
    <Navigation />
    <a href="https://hctor11.github.io/react-resources/" target="_blank">
      <h1>QR GENERATOR</h1>
    </a>

    <p>
      This Vue.js application allows users to generate QR codes dynamically
      based on their input. Users can enter a link or text, and the app will
      generate a QR code that represents the input.
    </p>

    <img
      loading="lazy"
      src={image.src}
      alt="qr generator"
    />

    <ul>
      <li>Nuxt</li>
      <li>Vue JS</li>
    </ul>
    <a href="https://github.com/Hctor11/qr-generator" target="_blank">
      github project
    </a>
    <a href="https://qr-generator-woad.vercel.app/" target="_blank">
      website
    </a>
  </main>
</Layout>
